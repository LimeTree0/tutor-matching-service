<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tutormatching.dotommorow.repository.mapper.user.UserMapper">

    <resultMap id="userMap" type="com.tutormatching.dotommorow.dto.user.UserDto">
        <id property="userId" column="userid"/>
        <result property="regionId" column="region_id"/>
        <result property="password" column="userpw"/>
        <result property="gender" column="gender"/>
        <result property="age" column="age"/>
        <result property="userName" column="username"/>
        <result property="profileImage" column="profile_image"/>
        <result property="phoneNumber" column="phoneNumber"/>
        <result property="signUpDate" column="signup_date"/>
    </resultMap>

    <select id="findById" resultType="com.tutormatching.dotommorow.dto.user.UserDto">
        SELECT *
        FROM users u
        where u.userid = #{userId}
    </select>
</mapper>